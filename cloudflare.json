{
    "name":"Interakt",
    "description": "Provides integration of your website with Interakt application",
    "version": "1.2",
    "category": "analytics",
    "main":"public/javascripts/interakt.js",
    "config":{
        "details":{
            "Language": "English",
            "Price": "Free",
            "Restrictions": "None",
            "TOS":"http://interakt.co/terms"
        },
        "assets":{
            "logos" : {
                "200px": "./public/images/200.png",
                "132px": "./public/images/132.png"
            },
            "detail_page" : [
                "./public/images/cf-interakt-Banner.jpg"
            ],
            "images" : [
                "./public/images/Interakt-banner.jpg"
            ]
        },
        "interface": [
            {
                "id": "name",
                "type": "string",
                "name": "Name",
                "description": "Your Full Name",
                "domain_request": true
            },
            {
                "id": "website",
                "type": "string",
                "name": "Website URL",
                "description": "Please enter your website url.",
                "domain_request": true
            }
        ]
    },
    "account": {
        "callback_url": "http://interakt.co/cloudfare",
        "user_fields": ["email"]
    }
}